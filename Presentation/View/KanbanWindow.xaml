<Window x:Class="Presentation.View.KanbanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.View"
        mc:Ignorable="d"
        Title="KanbanWindow" Height="450" Width="800">
    <Grid>
        <ListBox Name ="ColumnListBox" ItemsSource="{Binding Path=ColumnList, Mode=TwoWay}" VerticalContentAlignment="Top">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="true"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Name="ColumnName" Text="{Binding Path=ColumnModel.Name}"/>
                        <ListBox Name="TaskListBox"  ItemsSource="{Binding }">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock FontSize="13" FontWeight="Bold" Text="{Binding Title}"/>
                                        <TextBlock FontSize="12" Text="{Binding Description}"/>
                                        <TextBlock FontSize="11" Text="{Binding CreationDate}"/>
                                        <TextBlock FontSize="11" Text="{Binding DueDate}"/>
                                        <TextBlock FontSize="11" Text="{Binding AssigneeEmail}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
